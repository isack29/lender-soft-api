generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  LENDER
  ADMIN
}

model User {
  id        String   @id @default(uuid())
  username  String?
  document  String
  password  String
  firstname String
  lastname  String
  phone     String
  email     String
  address   String
  role      Role     @default(LENDER)
  deleted   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Debtor    Debtor[]
  Loan      Loan[]
}

model Debtor {
  id        String   @id @default(uuid())
  document  String
  firstName String
  lastName  String
  phone     String
  email     String
  address   String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  deleted   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Loan      Loan[]
}

model Loan {
  id                String          @id @default(uuid())
  amount            Float
  interestRate      Float
  totalWithInterest Float // monto total a pagar (amount + interés)
  term              Int // meses
  startDate         DateTime
  dueDate           DateTime
  user              User            @relation(fields: [userId], references: [id])
  userId            String
  debtor            Debtor          @relation(fields: [debtorId], references: [id])
  debtorId          String
  installments      Installment[] // cuotas generadas
  promissoryNote    PromissoryNote?
  payments          Payment[] // pagos asociados al préstamo
  status            LoanStatus      @default(ACTIVE)
  deleted           Boolean         @default(false)
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
}

enum LoanStatus {
  ACTIVE // tiene cuotas pendientes
  PAID // todas las cuotas cubiertas
  CANCELED // cancelado manualmente
  DEFAULTED // incumplido (varias cuotas vencidas)
}

model Installment {
  id         String            @id @default(uuid())
  loan       Loan              @relation(fields: [loanId], references: [id])
  loanId     String
  dueDate    DateTime
  amountDue  Float // total a pagar en esta cuota
  amountPaid Float             @default(0) // backend lo va actualizando
  status     InstallmentStatus @default(PENDING)
  payments   Payment[] // pagos asociados (directos o con excedente)
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt
  deleted    Boolean           @default(false)
}

enum InstallmentStatus {
  PENDING // no se ha pagado nada
  PARTIAL // abonada pero no completa
  PAID // totalmente pagada
  LATE // vencida sin cubrirse
}

model Payment {
  id             String          @id @default(uuid())
  paymentDate    DateTime
  amountPaid     Float
  paymentMethod  PaymentMethod
  loan           Loan            @relation(fields: [loanId], references: [id])
  loanId         String
  installment    Installment?    @relation(fields: [installmentId], references: [id])
  installmentId  String? // cuota principal a la que entra el pago
  proofOfPayment ProofOfPayment?
  deleted        Boolean         @default(false)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

enum PaymentMethod {
  CASH
  TRANSFER
  CARD
}

model ProofOfPayment {
  id        String   @id @default(uuid())
  url       String
  key       String
  payment   Payment  @relation(fields: [paymentId], references: [id])
  paymentId String   @unique
  deleted   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PromissoryNote {
  id        String   @id @default(uuid())
  key       String
  url       String
  loan      Loan     @relation(fields: [loanId], references: [id])
  loanId    String   @unique
  deleted   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
